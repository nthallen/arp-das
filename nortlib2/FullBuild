#! /bin/sh
#  ./FullBuild all
#  ./FullBuild make
#  ./FullBuild install
function compile {
  echo
  echo "============"
  echo "$*"
  date
  id
  echo "============"
  $*
}

case "$1" in
  make) ;;
  install) ;;
  all)
    if [ -n "$SUDO_USER" ]; then
      sudo -u $SUDO_USER $0 make 
    else
      $0 make
    fi
    $0 install
    exit;;
  *) echo "usage: ./FullBuild [make|install|all]" >&2
    exit;;
esac

(
  case "$1" in
    make)
      compile aclocal
      compile libtoolize --automake
      compile automake --add-missing
      compile autoconf
      compile ./configure
      compile make;;
    install)
      compile make install;;
  esac
) 2>&1 | tee -a FullBuild.log
